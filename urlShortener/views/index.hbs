<form method="POST" action="/">
  {{#if short.length}}
  <div class="result">
    <h3>Success! Please use this link:</h3>
    <p id="generatedURL"><a href="/{{short}}">{{short}}</a> </p>
  </div>
  <button class="copy" onclick="copy()">Copy</button>

  <a href="/">
    <i class="fa-solid fa-arrow-left fa-2x p-1"></i>
  </a>
  {{else}}
  <input type="url" name="url" placeholder="Input URL here..." aria-label="Input URL here"
    aria-describedby="search-button">
  {{#if errors}}
  {{#each errors}}
  <div class="alert">
    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
    {{this.msg}}
  </div>
  {{/each}}
  {{/if}}
  <button type="submit">Shortener</button>
  {{/if}}
</form>
<table>
  <thead>
    <tr>
      <th>Full URL</th>
      <th>Short URL</th>
      <th>Copy</th>
    </tr>
  </thead>
  <tbody>
    {{#each url}}
    <tr>
      <td><a href="{{this.full}}">{{this.full}}</a>
      </td>
      <td><a href="/{{this.short}}">{{this.short}}</a></td>
      <td class="copy"><i class="fa-solid fa-copy"></i>Copy</td>
    </tr>
    {{/each}}

  </tbody>
</table>